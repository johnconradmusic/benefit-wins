---
import Layout from "../layouts/Layout.astro";
import BenefitCard from "../components/BenefitCard.astro";
---

<Layout title="BenefitWins | Specialized Health Benefits">
	<main class="bg-white text-slate-900 font-sans">
		<nav
			class="flex items-center justify-between px-6 py-4 max-w-7xl mx-auto"
		>
			<div class="text-2xl font-black tracking-tighter text-blue-600">
				BENEFIT<span class="text-slate-900">WINS</span>
			</div>
			<div class="hidden md:flex gap-8 font-medium text-slate-600">
				<a href="#how-it-works" class="hover:text-blue-600"
					>How It Works</a
				>
				<a href="#benefits" class="hover:text-blue-600">Plan Benefits</a
				>
				<a href="#employers" class="hover:text-blue-600"
					>For Employers</a
				>
			</div>
			<a
				href="#contact"
				class="bg-slate-900 text-white px-5 py-2 rounded-full font-bold text-sm hover:bg-blue-600 transition-colors"
			>
				Contact Us
			</a>
		</nav>

		<header
			class="relative px-6 py-16 md:py-24 bg-gradient-to-b from-slate-50 to-white overflow-hidden"
		>
			<div
				class="max-w-7xl mx-auto grid lg:grid-cols-2 gap-12 items-center"
			>
				<div class="z-10">
					<div
						class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-blue-50 border border-blue-100 text-blue-700 text-xs font-bold uppercase tracking-wider mb-6"
					>
						<span class="relative flex h-2 w-2">
							<span
								class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75"
							></span>
							<span
								class="relative inline-flex rounded-full h-2 w-2 bg-blue-600"
							></span>
						</span>
						Representing Quantum Health Benefits
					</div>
					<h1
						class="text-5xl md:text-7xl font-extrabold tracking-tight mb-6"
					>
						Better Care. <br />
						<span class="text-blue-600 italic">No Extra Cost.</span>
					</h1>
					<p
						class="text-xl text-slate-600 mb-8 max-w-xl leading-relaxed"
					>
						An all-inclusive preventive healthcare program. We
						prioritize employee wellness while saving employers <span
							class="text-slate-900 font-bold underline decoration-blue-500"
							>$600 to $900 annually</span
						> per participant through tax optimization.
					</p>
					<div class="flex flex-col sm:flex-row gap-4">
						<button
							class="px-8 py-4 bg-blue-600 text-white rounded-xl font-bold shadow-lg shadow-blue-200 hover:scale-105 transition-transform"
						>
							Get Free Analysis
						</button>
						<button
							class="px-8 py-4 bg-white border border-slate-200 rounded-xl font-bold hover:bg-slate-50 transition-colors"
						>
							View Case Study
						</button>
					</div>
				</div>

				<div class="relative">
					<div
						class="absolute -top-20 -right-20 w-64 h-64 bg-blue-100 rounded-full blur-3xl opacity-50"
					>
					</div>
					<div
						class="bg-white p-8 rounded-3xl shadow-2xl border border-slate-100 relative z-10"
					>
						<h3 class="text-lg font-bold mb-6">
							Quantum Plan Highlights
						</h3>
						<ul class="space-y-4">
							<li class="flex items-center gap-3">
								<div
									class="bg-green-500 text-white p-1 rounded-full"
								>
									<svg
										xmlns="http://www.w3.org/2000/svg"
										class="w-4 h-4"
										fill="none"
										viewBox="0 0 24 24"
										stroke="currentColor"
										stroke-width="3"
										><path d="M5 13l4 4L19 7"></path></svg
									>
								</div>
								<span class="font-medium"
									>$0 Out-of-pocket for Employees</span
								>
							</li>
							<li class="flex items-center gap-3">
								<div
									class="bg-green-500 text-white p-1 rounded-full"
								>
									<svg
										xmlns="http://www.w3.org/2000/svg"
										class="w-4 h-4"
										fill="none"
										viewBox="0 0 24 24"
										stroke="currentColor"
										stroke-width="3"
										><path d="M5 13l4 4L19 7"></path></svg
									>
								</div>
								<span class="font-medium"
									>$1,000 Daily Hospital Benefit</span
								>
							</li>
							<li class="flex items-center gap-3">
								<div
									class="bg-green-500 text-white p-1 rounded-full"
								>
									<svg
										xmlns="http://www.w3.org/2000/svg"
										class="w-4 h-4"
										fill="none"
										viewBox="0 0 24 24"
										stroke="currentColor"
										stroke-width="3"
										><path d="M5 13l4 4L19 7"></path></svg
									>
								</div>
								<span class="font-medium"
									>24/7 Telemedicine ($0 Copay)</span
								>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</header>

		<section id="benefits" class="py-20 px-6 max-w-7xl mx-auto">
			<div class="text-center mb-16">
				<h2 class="text-3xl md:text-4xl font-bold mb-4">
					Plan Benefits (Examples)
				</h2>
				<p class="text-slate-500">
					Providing a Healthcare Management Platform that gives YOU
					control.
				</p>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
				<BenefitCard
					amount="$2,500"
					title="Critical Illness"
					description="Lump sum payment upon first diagnosis of heart attack, stroke, or cancer."
				/>
				<BenefitCard
					amount="$1,000"
					title="Hospital Confinement"
					description="Benefit payable per day of confinement."
				/>
				<BenefitCard
					amount="$500"
					title="Emergency Room"
					description="Daily benefit for sickness and injury visits to the ER."
				/>
				<BenefitCard
					amount="$500"
					title="Emergency Room"
					description="Daily benefit for sickness and injury visits to the ER."
				/>
			</div>
		</section>

		<section id="employers" class="bg-slate-900 text-white py-24 px-6">
			<div
				class="max-w-7xl mx-auto grid md:grid-cols-2 gap-16 items-center"
			>
				<div>
					<h2 class="text-4xl font-bold mb-8">
						How We Help Employers
					</h2>
					<div class="space-y-8">
						<div>
							<h4
								class="text-blue-400 font-bold text-xl mb-2 italic"
							>
								Improved Profitability
							</h4>
							<p class="text-slate-400">
								The Plan is paid for with pre-tax dollars,
								saving you an average of $600-$900 per
								participant every single year.
							</p>
						</div>
						<div>
							<h4
								class="text-blue-400 font-bold text-xl mb-2 italic"
							>
								Decreased Absenteeism
							</h4>
							<p class="text-slate-400">
								Happy and healthy employees mean better
								productivity and significantly fewer missed work
								days.
							</p>
						</div>
						<div>
							<h4
								class="text-blue-400 font-bold text-xl mb-2 italic"
							>
								Wellness Culture
							</h4>
							<p class="text-slate-400">
								Our self-directed courses and risk assessments
								help identify health issues before they become
								expensive problems.
							</p>
						</div>
					</div>
				</div>
				<div
					class="bg-slate-800 p-8 md:p-12 rounded-3xl border border-slate-700"
				>
					<h3 class="text-2xl font-bold mb-6 italic text-center">
						Ready to see the math?
					</h3>
					<form class="space-y-4">
						<input
							type="text"
							placeholder="Company Name"
							class="w-full bg-slate-700 border-none rounded-lg p-4 focus:ring-2 focus:ring-blue-500 text-white"
						/>
						<input
							type="email"
							placeholder="Work Email"
							class="w-full bg-slate-700 border-none rounded-lg p-4 focus:ring-2 focus:ring-blue-500 text-white"
						/>
						<button
							class="w-full bg-blue-600 hover:bg-blue-500 py-4 rounded-lg font-bold text-lg transition-colors"
							>Request Custom Quote</button
						>
						<p
							class="text-[10px] text-slate-500 text-center mt-4 uppercase tracking-widest"
						>
							No obligation. Secure & Confidential.
						</p>
					</form>
				</div>
			</div>
		</section>

		<footer class="py-12 px-6 border-t border-slate-100">
			<div
				class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-center gap-8 text-sm text-slate-500"
			>
				<div>Â© 2026 BenefitWins, LLC. All rights reserved.</div>
				<div class="flex gap-6 italic underline decoration-blue-200">
					<a href="#">Terms & Conditions</a>
					<a href="#">Privacy Policy</a>
				</div>
			</div>
		</footer>
	</main>
</Layout>

<style>
	html {
		scroll-behavior: smooth;
	}
</style>
